# Smart-0DTE-System Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://smart0dte_user:smart0dte_password@localhost:5432/smart0dte
REDIS_URL=redis://localhost:6379/0
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=smart0dte_influx_token_12345
INFLUXDB_ORG=smart0dte
INFLUXDB_BUCKET=market_data

# Databento Configuration
DATABENTO_API_KEY=your_databento_api_key_here

# Interactive Brokers Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_PAPER_TRADING=true

# Security Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_VERSION=v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Trading Configuration
DEFAULT_POSITION_SIZE=24000
DEFAULT_PROFIT_TARGET=0.10
DEFAULT_STOP_LOSS=0.10
DEFAULT_CONFIDENCE_THRESHOLD=0.65
MAX_POSITIONS_PER_USER=10
DAILY_LOSS_LIMIT=2400

# Risk Management
VIX_EMERGENCY_THRESHOLD=35.0
CORRELATION_BREAKDOWN_THRESHOLD=0.3
VOLUME_SPIKE_THRESHOLD=3.0
EMERGENCY_HALT_ENABLED=true

# Market Data Configuration
MARKET_DATA_REFRESH_INTERVAL=2
OPTIONS_CHAIN_REFRESH_INTERVAL=30
CORRELATION_REFRESH_INTERVAL=5
VIX_REFRESH_INTERVAL=1

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=smart0dte-data
CLOUDWATCH_LOG_GROUP=/aws/smart0dte/application

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@smart0dte.com

# Webhook Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_SIGNAL_AUTOMATION=true
ENABLE_RISK_MANAGEMENT=true
ENABLE_EMERGENCY_HALT=true
ENABLE_CORRELATION_ANALYSIS=true
ENABLE_VIX_ADAPTATION=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10
CACHE_TTL_SECONDS=300

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

