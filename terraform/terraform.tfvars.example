# Smart-0DTE-System Terraform Variables Example
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"
environment = "development"
project_name = "smart-0dte"

# Network Configuration
vpc_cidr = "10.0.0.0/16"
admin_cidr = "0.0.0.0/0"  # Restrict this to your IP for security

# EC2 Configuration
instance_type = "t3.large"
key_pair_name = "your-key-pair-name"  # Create this in AWS EC2 console
min_instances = 1
max_instances = 3
desired_instances = 2

# Database Configuration
db_instance_class = "db.t3.micro"
db_username = "postgres"
db_password = "your-secure-password-here"  # Use a strong password

# Redis Configuration
redis_node_type = "cache.t3.micro"

# API Keys (Required for production)
polygon_api_key = "your-polygon-api-key"
alpha_vantage_api_key = "your-alpha-vantage-api-key"
openai_api_key = "your-openai-api-key"

# IBKR Configuration
ibkr_host = "127.0.0.1"
ibkr_port = 7497
ibkr_client_id = 1

